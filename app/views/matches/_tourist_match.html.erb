<div id="match_<%= match.id %>">
  <div class="d-flex border w-100 mt-4 rounded justify-content-between">
    <% if match.guide.photo.key != nil %>
      <%= cl_image_tag match.guide.photo.key, width: 300, crop: :fill, class: "justify-content-center my-3" %>
    <% end %>
    <div class="justify-content-start text-start ms-2 mt-1">
      <h2><%= link_to match.guide.name, user_path(match.guide) %></h2>
      <p><%= match.guide.short_description %></p>
      <p>Connection status: <strong><%= match.status %></strong><%= " - wait for confirmation" if match.status === 'pending' %></p>
      <% if match.status == 'accepted' %>

        <div class="d-flex justify-content-between">
          <%= link_to "Chat", match_path(match), class: "btn btn-outline-primary mb-3" %>
          <%= button_to "Finish match", finish_match_path(match), class: "btn btn-outline-warning mb-3" %>
        </div>

      <% elsif match.status == "finished" %>
          <%= button_to "Write review", new_match_review_path(match.id), method: :get, class: "btn btn-outline-primary mb-3" %>
      <% end %>

    </div>
  </div>
</div>
