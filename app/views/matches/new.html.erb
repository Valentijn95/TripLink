
<div class="d-flex justify-content-center">
  <% if @guide.photo.key != nil %>
    <%= cl_image_tag @guide.photo.key, height: 250, width: 350, crop: "fill", class: "cloudinary-image" %>
  <% end %>
</div>

<div class="basic-padding mt-3">
  <h1>Send a request to <%= @guide.name %></h1>
  <div class="new-match-form">

    <%= simple_form_for @match do |f| %>
        <%= f.input :guide_id, as: :hidden, input_html: { value: @guide.id } %>
        <%= f.input :location_id, as: :hidden, input_html: { value: @location.id } %>
        <%= f.input :message, as: :text, label: false, input_html: { placeholder: "Introduce yourself...", value: "" } %>
       <%= f.button :submit, value: "Send request", class: 'btn btn-primary'%>
    <% end %>
  </div>

</div>
