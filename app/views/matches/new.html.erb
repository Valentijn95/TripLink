<h1><%= @guide.name %></h1>

  <%= simple_form_for [@match, @message], url: match_messages_path(@match) do |f| %>
    <%= f.input :content, label: false, placeholder: "Type your message here", wrapper_html: { class: "flex-grow-1" } %>
    <%= f.submit "Send Message", class: "btn btn-primary" %>
  <% end %>
