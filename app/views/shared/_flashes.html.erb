<section id="flashes">
  <% if notice %>
    <div data-controller="flash" data-flash-timeout-value="3000" class="flash flash-warning alert alert-dismissible show" role="alert">
      <span><%= notice %></span>
      <a data-bs-dismiss="alert" aria-label="Close" class="ms-2">
        <i class="fas fa-times"></i>
      </a>
    </div>
  <% end %>
  <% if alert %>
    <div data-controller="flash" data-flash-timeout-value="3000" class="flash flash-danger alert alert-dismissible show" role="alert">
      <span><%= alert %></span>
      <a data-bs-dismiss="alert" aria-label="Close" class="ms-2">
        <i class="fas fa-times"></i>
      </a>
    </div>
  <% end %>
</section>
