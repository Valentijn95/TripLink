 <% location = params[:location] %>



    <div class="text-center">
      <% if @user.photo.key != nil %>
        <%= cl_image_tag(@user.photo.key, width: 366, height: 274, gravity: "face", crop: "auto") %>
      <% end %>
    </div>

    <div class="ps-3 pe-3">
      <h1><%= @user.name %></h1>
      <p><%= @user.guide_description %>
      </p>

      <% if @this_match[0] %>
        <%= button_to "Chat", match_path(@this_match[0]), class: 'btn-connect', method: :get %>
      <% else %>
        <%= link_to "Connect!", new_match_path(location_id: location, guide_id: @user.id), class: 'btn btn-connect' %>
      <% end %>
      <p><strong>Interests</strong></p>
      <div class="interests-container">
        <% @interests.each do |interest|%>
        <div class="interest">
          <%= interest %>
        </div>
        <% end %>
      </div>
      <p><strong>Languages</strong></p>
      <p>.....</p>
      <p><strong>Reviews</strong></p>
      <% @user.reviews.each do |review| %>
        <p><%= review.content %></p>
      <% end %>
    </div>
